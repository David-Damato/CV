{% extends 'base.html.twig' %}

{% block title %}Compétences
{% endblock %}

{% block body %}
	<main
		id="main">
		<!-- ======= Skills Section ======= -->
		<section id="skills" class="skills section-bg">
			<div class="container">

				<div class="section-title">
					<h2>Compétences</h2>
				</div>

				<div class="row skills-content">
					<h3>Soft Skills</h3>
					{% for softskill in softskills %}
						<div class="col-lg-6" {# data-aos="fade-up" #}>
							<p>{{ softskill.name }}</p>
							<div class="progress">
								<span class="skill">
									<i>{{ softskill.description1 }}</i>
									<i>{{ softskill.description2 }}</i>
									<i>{{ softskill.description3 }}</i>
									<i>{{ softskill.description4 }}</i>
								</span>
								{% if is_granted('ROLE_ADMIN') %}
									<div>
										<a href="{{ path('skills_edit', {'id': softskill.id}) }}">edit</a>
									</div>
								{% endif %}
							</div>
						</div>
					{% endfor %}
				</div>
				<br>
				<div class="row skills-content">
					<h3>Hard Skills</h3>
					{% for hardskill in hardskills %}
						<div class="col-lg-6" {# data-aos="fade-up" #}>
							<p>{{ hardskill.name }}</p>
							<div class="progress">
								<span class="skill">
									<i>{{ hardskill.description1 }},</i>
									<i>{{ hardskill.description2 }},</i>
									<i>{{ hardskill.description3 }}</i>
									<i>{{ hardskill.description4 }}</i>
								</span>
								{% if is_granted('ROLE_ADMIN') %}
									<div>
										<a href="{{ path('skills_edit', {'id': hardskill.id}) }}">edit</a>
									</div>
								{% endif %}
							</div>
						</div>
					{% endfor %}
				</div>
				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('skills_new') }}">Create new</a>
				{% endif %}
			</div>
		</section>
		<!-- End Skills Section -->
	</main>
{% endblock %}
