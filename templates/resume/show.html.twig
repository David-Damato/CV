{% extends 'base.html.twig' %}

{% block title %}Resume{% endblock %}

{% block body %}
    <h1>Resume</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resume.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ resume.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ resume.type }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ resume.lieu }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ resume.adresse }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ resume.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ resume.message }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ resume.dateDebut ? resume.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ resume.dateFin ? resume.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('resume_index') }}">back to list</a>

    <a href="{{ path('resume_edit', {'id': resume.id}) }}">edit</a>

    {{ include('resume/_delete_form.html.twig') }}
{% endblock %}
