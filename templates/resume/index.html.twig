{% extends 'base.html.twig' %}

{% block title %}Resume index{% endblock %}

{% block body %}
    <h1>Resume index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Lieu</th>
                <th>Adresse</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resume in resumes %}
            <tr>
                <td>{{ resume.id }}</td>
                <td>{{ resume.name }}</td>
                <td>{{ resume.type }}</td>
                <td>{{ resume.lieu }}</td>
                <td>{{ resume.adresse }}</td>
                <td>{{ resume.subject }}</td>
                <td>{{ resume.message }}</td>
                <td>{{ resume.dateDebut ? resume.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ resume.dateFin ? resume.dateFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('resume_show', {'id': resume.id}) }}">show</a>
                    <a href="{{ path('resume_edit', {'id': resume.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('resume_new') }}">Create new</a>
{% endblock %}
