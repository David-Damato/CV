{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<main
		id="main">
		<!-- ======= Contact Section ======= -->
		<section id="contact" class="contact">
			<div class="container">

				<div class="section-title">
					<h2>Contact</h2>
				</div>
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}
				<div class="row" {# data-aos="fade-in" #}>

					<div class="col-lg-5 d-flex align-items-stretch">
						<div class="info">
							<div class="address">
								<i class="icofont-google-map"></i>
								<h4>Adresse:</h4>
								<p>8 rue des Semailles, 67370 Willgottheim</p>
							</div>

							<div class="email">
								<i class="icofont-envelope"></i>
								<h4>Email:</h4>
								<p>david67230@gmail.com</p>
							</div>

							<div class="phone">
								<i class="icofont-phone"></i>
								<h4>Téléphone :</h4>
								<p>+336 752 654 15</p>
							</div>

							<iframe src="https://maps.google.com/maps?q=strasbourg&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen></iframe>

						</div>

					</div>

					<div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
						<div class="php-email-form">
							{{ form_start(form) }}
							<div class="row">
								<div class="form-group col-md-6">
									<label for="name">Votre nom</label>
									<div>
										{{ form_widget(form.name) }}
									</div>
								</div>
								<div class="form-group col-md-6">
									<label for="name">Votre Email</label>
									<div>
										{{ form_widget(form.email) }}
									</div>
								</div>
							</div>
							<div class="form-group">
								<label for="name">Sujet</label>
								<div>
									{{ form_widget(form.subject) }}
								</div>
							</div>
							<div class="form-group">
								<label for="name">Message</label>
								<div>
									{{ form_widget(form.message) }}
								</div>
							</div>
							<div class="text-center">
								<button type="submit">Envoyer</button>
							</div>
							{{ form_end(form) }}
						</div>
					</div>

				</div>

			</div>
		</section>
		<!-- End Contact Section -->
	</main>
	<!-- End #main -->

{% endblock %}
